class Solution {
public:
    void rotate(vector<int>& v, int k) {
    k=k%v.size();
    reverse(v.begin(),v.end());
    reverse(v.begin(),v.begin()+k);
    reverse(v.begin()+k,v.end());}
};

//By using reverse function

// if it is string we can use while loop also to reverse